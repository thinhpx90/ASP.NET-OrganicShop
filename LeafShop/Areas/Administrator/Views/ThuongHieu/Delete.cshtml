@model LeafShop.Models.ThuongHieu

@{
    ViewBag.Title = "Xóa thương hiệu";
}
<style>
    th, td {
        padding: 10px;
    }

    div a {
        color: white;
    }

        div a:hover {
            color: white;
        }

    .w-50 {
        width: 50%;
    }
</style>
<h2 style="font-size: 30px">Xóa thương hiệu</h2>
<hr />

<div style="display:flex;justify-content:center">
    <div class="w-50">
        <table border="1" style="width:100%;">
            <tr>
                <th>Tên thương hiệu</th>
                <td>@Model.TenThuongHieu</td>
            </tr>
            <tr>
                <th>Địa chỉ</th>
                <td>@Model.DiaChiThuongHieu</td>
            </tr>
            <tr>
                <th>Số điện thoại</th>
                <td>@Model.DienThoaiThuongHieu</td>
            </tr>
            <tr>
                <th>Mô tả</th>
                <td>@Model.MoTaThuongHieu</td>
            </tr>
            <tr>
                <th>Ảnh thương hiệu</th>
                <td>@{ var ImagePath = Model.AnhThuongHieu != null ? Model.AnhThuongHieu : "~/Content/image/h0.png"; } <img src="@Url.Content(ImagePath)" style="width: 150px; height: 150px;" /></td>
            </tr>

        </table>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="margin-top:10px;text-align:center;">
                <input type="submit" value="Xoá" class="btn btn-danger" onclick="return confirmDelete()" />
                <div class="btn btn-warning">@Html.ActionLink("Quay trở lại", "Index")</div>
            </div>
        }
    </div>
</div>

<script>
    function confirmDelete() {
        var result = confirm('Bạn có chắc chắn muốn XÓA?')
        if (result) {
            return true;
        }
        else {
            return false;
        }
    }
</script>
@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}
