@model PagedList.IPagedList<LeafShop.Models.DanhMuc>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Danh mục";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="page-title">
        <div class="title_left">
            <h3>Quản lý danh mục</h3>
        </div>
    </div>
    <div class="x_panel">
        <div class="x_content">
            <div class="row">
                <div class="col-sm-6">
                    <span class="glyphicon glyphicon-plus"></span>@Html.ActionLink("Thêm mới", "Create")
                </div>
                <div class="col-sm-6">
                    <div id="datatable_filter" class="dataTables_filter">
                        @using (Html.BeginForm())
                        {
                            //Tìm kiếm:  <label><input type="search" class="form-control input-sm" placeholder=""></label>
                            <p>
                                <input type="submit" value="Tìm" class="btn btn-primary"/>
                                @Html.TextBox("SearchString")
                            </p>
                        }
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Mã danh mục
                        </th>
                        <th>
                            Tên danh mục
                        </th>
                        <th>
                            Danh mục cha
                        </th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.MaDanhMuc)</td>
                            <td>@Html.DisplayFor(modelItem => item.TenDanhMuc)</td>
                            <td>@Html.DisplayFor(modelItem => item.DanhMuc2.TenDanhMuc)</td>
                            <td>
                                @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaDanhMuc }) |
                                @Html.ActionLink("Xoá", "Delete", new { id = item.MaDanhMuc })
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
            <br />
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index", new
            {
                page,
            currentFilter = ViewBag.CurrentFilter
            }))
        </div>
    </div>
</div>

