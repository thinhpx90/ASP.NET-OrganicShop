@model List<LeafShop.Models.ChiTietDatHang> 
@{ ViewBag.Title = "UsersInf";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<link href='//hstatic.net/0/0/global/checkouts.css?v=1.1' rel='stylesheet' type='text/css' media='all' />
<link href='//theme.hstatic.net/1000104489/1000257823/14/check_out.css?v=3663' rel='stylesheet' type='text/css' media='all' />
<script src='//hstatic.net/0/0/global/jquery.min.js' type='text/javascript'></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<script src='//hstatic.net/0/0/global/jquery.validate.js' type='text/javascript'></script>

<section id="content">
    <div class="content-wrap">
        <div class="container clearfix" style="width:1100px;">
            <div class="fancy-title title-bottom-border">
                <h3>Chi tiết đơn hàng</h3>
            </div>
            <div class="table-responsive account-table">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">
                                Tên sản phẩm
                            </th>
                            <th scope="col">
                                Số lượng
                            </th>
                            <th scope="col">
                                Đơn giá
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Phí ship</td>
                            <td>1</td>
                            <td>35,000đ</td>
                        </tr>
                        @foreach (var chitietdh in Model)
                        {
                            <tr>
                                <td scope="row">@chitietdh.SanPham.TenSanPham</td>
                                <td>@chitietdh.SoLuong</td>
                                <td data-checkout-subtotal-price-target="@chitietdh.DonGia">@String.Format("{0:0,0đ}", chitietdh.DonGia)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <p style="padding-bottom:50px;"><a id='view_address' href='/UsersInformation/UsersInf/@ViewBag.KhachHang.MaKhachHang'>Quay lại</a></p>
        </div>
    </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>