@model List<LeafShop.Models.DatHang>
@{
    ViewBag.Title = "UsersInf";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href='//hstatic.net/0/0/global/checkouts.css?v=1.1' rel='stylesheet' type='text/css' media='all' />
<link href='//theme.hstatic.net/1000104489/1000257823/14/check_out.css?v=3663' rel='stylesheet' type='text/css' media='all' />
<script src='//hstatic.net/0/0/global/jquery.min.js' type='text/javascript'></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<script src='//hstatic.net/0/0/global/jquery.validate.js' type='text/javascript'>
   
</script>

<style>
    .smaller td {
    }
</style>

<section id="content">
    <div class="content-wrap">
        <div class="container clearfix" style="width:1100px;">
            <div class="fancy-title title-bottom-border">
                <h3>Đơn hàng đã đặt</h3>
            </div>
            <div class="table-responsive account-table">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">
                                Mã đặt hàng
                            </th>
                            <th scope="col">
                                Địa chỉ nhận hàng
                            </th>
                            <th scope="col">
                                Tổng tiền
                            </th>
                            <th scope="col">
                                Ngày khởi tạo
                            </th>
                            <th scope="col">
                                Ghi chú
                            </th>
                            <th scope="col">
                                Trạng thái
                            </th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <tbody>
                            <tr>
                                <td scope="row">@Model[i].MaDatHang</td>
                                <td>@Model[i].DiaChi</td>
                                <td data-checkout-subtotal-price-target="@Model[i].TongTien">@String.Format("{0:0,0đ}", Model[i].TongTien)</td>
                                <td>@{ var date2 = @Model[i].NgayKhoiTao.HasValue ? @Model[i].NgayKhoiTao.Value.ToString("dd-MM-yyyy") : String.Empty; } @date2</td>
                                <td>@Model[i].GhiChu</td>
                                <td>@(Model[i].TrangThai ? "Chưa hoàn thành" : "Hoàn thành")</td>
                                <td>
                                    @Html.ActionLink("Xem chi tiết", "Details", new { id = @Model[i].MaDatHang })
                                </td>
                            </tr>
                        </tbody>
}
                </table>
            </div>
            <div class="fancy-title title-bottom-border">
                <h3>Thông tin tài khoản</h3>
            </div>
            <div class="account-detail">
                <table class="table table-striped" style="width:100%;text-align:left;">
                    <tr>
                        <td>
                            <b>Tên khách hàng:</b>
                        </td>
                        <td style="text-align:left;">
                            @ViewBag.KhachHang.TenKhachHang
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>Tên đăng nhập:</b>
                        </td>
                        <td style="text-align:left;">
                            @ViewBag.KhachHang.TenDangNhap
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>Mật khẩu:</b>
                        </td>
                        <td style="text-align:left;">
                            @ViewBag.KhachHang.MatKhau
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>Ngày sinh:</b>
                        </td>
                        <td style="text-align:left;">
                            @{ var date = @ViewBag.KhachHang.NgaySinh != null ? @ViewBag.KhachHang.NgaySinh.ToString("dd-MM-yyyy") : String.Empty; }
                            @date
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>Địa chỉ khách hàng:</b>
                        </td>
                        <td style="text-align:left;">
                            @ViewBag.KhachHang.DiaChiKhachHang
                        </td>
                    </tr>
                </table>
                <p style="margin-bottom:0px;"><a id='view_address' href='/UsersInformation/UsersUpdate/@ViewBag.KhachHang.MaKhachHang'>Chỉnh sửa thông tin</a></p>
            </div>
        </div>
    </div>
</section>

