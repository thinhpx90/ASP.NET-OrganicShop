@model LeafShop.Models.KhachHang

@{
    ViewBag.Title = "Login & Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- #page-title end -->
<section id="content">

    <div class="content-wrap">

        <div class="container clearfix">

            <div class="accordion accordion-lg divcenter nobottommargin clearfix" style="max-width: 550px;">

                <!-- login -->
                <div id='login'>
                    <div class="acctitle"><i class="acc-closed fa fa-lock"></i><i class="acc-open fa fa-unlock"></i>Đăng nhập</div>
                    <div class="acc_content clearfix">
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            @Html.ValidationMessage("ErrorLogin", new { @class = "text-danger" })
                            <hr />
                            <div class="form-group">
                                <label>Tài khoản</label>
                                @Html.TextBoxFor(model => model.TenDangNhap,
                                            new { @class = "form-control", @name = "tendangnhap", @autoforcus = "autofocus", @required = "required", @placeholder = "Nhập tài khoản" })
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu</label>
                                @Html.PasswordFor(model => model.MatKhau,
                                           new { @class = "form-control", @name = "matkhau", @required = "required", @placeholder = "Nhập mật khẩu" })
                            </div> <!-- <p class="lost-password"><a href="forgot-password.html">Forgot password?</a></p> -->
                            <input type="submit" value="Đăng nhập" class="return-customer-btn">}
                    </div>
                </div>
                <!-- end login -->


                <!-- register -->
                <div id='register'>
                    <div class="acctitle"><i class="acc-closed fa fa-user"></i><i class="acc-open fa fa-check-circle"></i>Người dùng mới? Đăng ký tài khoản</div>
                    <div class="acc_content clearfix">
                        @using (Html.BeginForm("Signup", "Home", FormMethod.Post, new { onsubmit = " return check()" }))
                        {
                            <div class="col_full">
                                <label for="first_name">Tên:<span class="required require_symbol">*</span></label>
                                @Html.TextBoxFor(model => model.TenKhachHang,
                                            new { @class = "form-control", @name = "tenkhachhang", @autoforcus = "autofocus", @required = "required", @placeholder = "Họ và tên" })
                            </div>

                            <div class="col_full">
                                <label for="register-form-email">Tên đăng nhập:<span class="required require_symbol">*</span></label>
                                @Html.TextBoxFor(model => model.TenDangNhap,
                                            new { @class = "form-control", @name = "tendangnhap", @autoforcus = "autofocus", @required = "required", @placeholder = "Username" })
                            </div>

                            <div class="col_full">
                                <label for="register-form-password">Mật khẩu:<span class="required require_symbol">*</span></label>
                                <input type="password" class="form-control" id="pwd" name="matkhau" placeholder="Mật khẩu" required>
                            </div>

                            <div class="col_full">
                                <label for="register-form-repassword">Nhập lại mật khẩu:<span class="required require_symbol">*</span></label>
                                <input type="password" class="form-control" id="pwd-confirm" placeholder="Xác nhận mật khẩu" required>
                            </div>

                            <div class="col_full nobottommargin">
                                <button class="button button-3d button-black nomargin" id="register-form-submit" name="register-form-submit" type='submit'>Đăng ký</button>
                            </div>
                        }
                    </div>
                </div>
                <!-- end register -->
                <!-- end forgot password -->
            </div>

            <script>
                function check() {
                    if (document.getElementById("pwd").value != document.getElementById("pwd-confirm").value) {
                        document.getElementById("error-message").innerHTML = "Mật khẩu không khớp";
                        return false;
                    }
                    return true;
                }
            </script>
        </div>

    </div>
</section>
