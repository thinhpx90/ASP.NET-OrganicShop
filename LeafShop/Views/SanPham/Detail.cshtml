                                            <span><strong>Mã sản phẩm </strong>@Model.MaSanPham</span>

                                        </div>

                                        <div class="product-price col-sm-12 col-md-12 noleftpadding">

                                            <ins> @String.Format("{0:0,0đ}", Model.DonGia)</ins>


                                        </div><!-- Product Single - Price End -->
                                        <!-- Product Single - Rating
                                        ============================================= -->

                                        <div class="clear"></div>

                                        <div class="line"></div>

                                       
                                        <!-- variants -->
                                        <!-- end variant -->
                                        <!-- <form class="cart nobottommargin clearfix" method="post" enctype='multipart/form-data'>-->
                                        <div class="quantity product-quantity clearfix col-md-6 col-xs-12 noleftpadding">
                                            <input type="number" class='qty' id='product_quantity1' step="1" min="1" name="quantity" value="1" title="Qty" max="@Model.SoLuong" />
                                        </div>
                                       
                                        @*<button type="submit" id=''
                                                    class="add-to-cart button nomargin col-xs-12 col-md-6 nopadding"
                                                    style="height: 40px !important; width: 50% !important; padding: 0 !Important">
                                                Thêm
                                                vào giỏ
                                            </button>*@
                                        <div class="nomargin col-xs-12 col-md-6 nopadding"
                                             style="height: 40px !important; width: 50% !important; padding: 0 !Important">
                                            @if (Model.SoLuong == 0)
                                            {
                                                <div class="buy_alls">
                                                    <a href="javascript::0">Hết Hàng</a>
                                                </div>
                                            }
                                            @if (Model.SoLuong > 0)
                                            {
                                                <div class="buy_all">
                                                    <a class="product_quick_add" data-toggle='tooltip' href="#" onclick="AddToCart2(@Model.MaSanPham,1)">Thêm </a>
                                                </div>
                                            }
                                        </div>


                                        <button type="submit" id=''
                                                class="button col-xs-12 nopadding buynow">
                                            Mua ngay
                                        </button>
                                        <div class="clear"></div>
                                        <div class="line"></div>

                                        <div class="si-share noborder clearfix">
                                            <div class='socical-wrapper'>


                                                <ul class="social-icons">
                                                    <!-- check null: == nill -->
                                                    <div class="fb-send"
                                                         data-href="/products/thit-ba-chi-lon-sach-nguyen-khoi-farm-1kg">
                                                    </div>
                                                    <div class="item">
                                                        <div class="fb-like fix_top"
                                                             data-href="/products/thit-ba-chi-lon-sach-nguyen-khoi-farm-1kg"
                                                             data-layout="button" data-action="like"
                                                             data-show-faces="true" data-share="true"
                                                             style='margin-right: 5px;'></div>
                                                    </div>

                                                    <!-- old style: <li><a class="facebook" data-original-title="facebook" href="#"></a></li>   ...twitter,googleplus,evernote,tumblr -->

                                                    <script>
                                                        (function () {
                                                            var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
                                                            po.src = '../../apis.google.com/js/plusone.js';
                                                            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
                                                        })();
                                                    </script>

                                                </ul>
                                            </div>
                                        </div><!-- Product Single - Share End -->

                                    </div>

                                </div>
                                <div class='clear' style='margin-bottom: 25px;'></div>
                                <div class="col_full nobottommargin">
                                    <div class="aetabs-tabs">
                                        <ul class="tabs clearfix">
                                            <li class="active"><a href="#tab1">Mô tả</a></li>
                                            <li class=""><a href="#tab2">Thương hiệu</a></li>
                                        </ul>
                                        <div class="tabs-content active" id="tab1">
                                            @{ 
                                                HtmlString mt = new HtmlString(Model.MoTa);
                                            }
                                            @mt
                                        </div>


                                        <div class="tabs-content " id="tab2">
                                            <div>
                                                <span style="font-weight: 400;">
                                                    <img src="@ViewBag.thuongHieu.AnhThuongHieu"
                                                         width="189" height="178" />
                                                </span>
                                            </div>
                                            <div>
                                                <span style="font-weight: 400;">
                                                    @ViewBag.thuongHieu.MoTaThuongHieu
                                                </span>
                                            </div>
                                            
                                        </div>
                                        @*<div class="tabs-content " id="tab3">
                                            <div id="fb-root">&nbsp;</div>
                                            <div class="fb-comments">&nbsp;</div>
                                        </div>*@

                                    </div>

                                    <script>
                                        var menu = $('.aetabs-tabs .tabs li');
                                        var menuLinks = $('.aetabs-tabs .tabs li a');
                                        var tabsContent = $('.aetabs-tabs .tabs-content');
                                        menuLinks.click(function (e) {
                                            e.preventDefault();
                                            var targetBlock = $(this).attr('href');
                                            menu.removeClass('active');
                                            $(this).parent('li').addClass('active');
                                            tabsContent.hide();
                                            $(targetBlock).fadeIn(500);
                                        });
                                    </script>


                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- related products -->
                <!-- end related products -->

            </div>
        </div>
    </div>
</section><!-- #content end -->
<script>
    $(document).ready(function () {
        if ($('#product_quantity').val() == '0') {
            $('.add-to-cart').attr('disabled', 'disabled');
        }
        else {
            $('.add-to-cart').removeAttr('disabled');
        }
    });

</script>

<script>
    var selectCallback = function (variant, selector) {
        if (variant != null) {
            var $tagPrice = '#ProductDetailsForm div.product-price ins';
            var $tagPriceCompare = '#ProductDetailsForm div.product-price del';
            var $tagProductSection = '#ProductDetailsForm';
            update_variant(variant, $tagPrice, $tagPriceCompare, '#addtocart', $tagProductSection);
            if (variant != null && variant.featured_image != null) {
                $(".pd_slide_thumb .slick-list img[src='" + Haravan.resizeImage(variant.featured_image.src, 'small') + "']").click();
            };
        }
    };
</script>

