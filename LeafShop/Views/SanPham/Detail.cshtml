@model LeafShop.Models.SanPham
<script src="https://kit.fontawesome.com/e38e0bb8bb.js" crossorigin="anonymous"></script>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="page-title">
    <div class="container clearfix">

        <ol class="breadcrumb col-md-6 col-sm-6">
            <li><a href="/">Trang chủ</a></li>

            <li class='active'>@Model.TenSanPham</li>

        </ol>
    </div>
</section>
<section id="content">
    <div class="content-wrap">
        <div class="container clearfix">
            <div class='collection_banner'>

            </div>
            <div class="post_content nobottommargin clearfix">

                <div class="sidebar nobottommargin left-sidebar col-sm-3 hidden-xs hidden-sm">
                    <div class="sidebar-widgets-wrap">


                        <div class="widget widget_links clearfix hidden">
                            <h4>Danh mục</h4>
                            <ul class='sidebar_menu'>


                                <li><a href="../index.html">Trang chủ</a></li>

                                <li><a href="../collections/all.html">Sản phẩm</a></li>

                                <li><a href="../pages/gioi-thieu-ve-leaf-shop.html">Giới thiệu</a></li>


                            </ul>
                        </div>

                        <!-- end categories -->
                        <!-- recent product -->
                        <!-- end recent product -->
                        <!-- most popular -->

                        <div class="widget clearfix">

                            <h4><a href='../collections/cham-soc-da-mat.html'>Sản phẩm nổi bật</a></h4>
                            <div id="Popular-item" class="sidebar_menu">

                                @foreach (var spNoiBat in @ViewBag.spNoiBat)
                                {
                                    <div class="spost clearfix">
                                        <div class="entry-image">
                                            <a href="/SanPham/Detail/@spNoiBat.MaSanPham">
                                                <img src="@spNoiBat.HinhMinhHoa"
                                                     alt="@spNoiBat.TenSanPham">
                                            </a>
                                        </div>
                                        <div class="entry-c">
                                            <div class="entry-title">
                                                <h4>
                                                    <a href="/SanPham/Detail/@spNoiBat.MaSanPham">
                                                        @spNoiBat.TenSanPham
                                                    </a>
                                                </h4>
                                            </div>
                                            <ul class="entry-meta">
                                                <li class="color">
                                                    <ins>@String.Format("{0:0,0đ}", spNoiBat.DonGia)</ins>

                                                </li>
                                                <!--<li><i class="icon-star3"></i> <i class="icon-star3"></i> <i class="icon-star3"></i> <i class="icon-star3"></i> <i class="icon-star-half-full"></i></li>-->
                                            </ul>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- end most recent -->
                        <!-- related product -->
                        <div class="widget clearfix">
                            <h4><a href='#'>Sản phẩm liên quan</a></h4>
                            <div id="Popular-item" class="sidebar_menu">
                                @foreach (var spLienquan in ViewBag.spLienQuan)
                                {
                                    <div class="spost clearfix">
                                        <div class="entry-image">
                                            <a href="/SanPham/Detail/@spLienquan.MaSanPham">
                                                <img src="@spLienquan.HinhMinhHoa"
                                                     alt="@spLienquan.TenSanPham">
                                            </a>
                                        </div>
                                        <div class="entry-c">
                                            <div class="entry-title">


                                                <h4>
                                                    <a href="/SanPham/Detail/@spLienquan.MaSanPham">
                                                        @spLienquan.TenSanPham
                                                    </a>
                                                </h4>

                                            </div>
                                            <ul class="entry-meta">
                                                <li class="color">
                                                    <ins> @String.Format("{0:0,0đ}", spLienquan.DonGia)</ins>

                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>



                        <div class="widget clearfix" style='overflow:hidden'>
                            <div style="width: 100%;">
                                <!-- Page plugin's width will be 180px -->
                                <div class="fb-page" data-href="https://www.facebook.com/leafshop.vn/"
                                     data-width="320"></div>
                            </div>

                            <script>
                                (function (d, s, id) {
                                    var js, fjs = d.getElementsByTagName(s)[0];
                                    if (d.getElementById(id)) return;
                                    js = d.createElement(s); js.id = id;
                                    js.src = "../../connect.facebook.net/en_US/sdk.js#xfbml=1&appId=263266547210244&version=v2.0";
                                    fjs.parentNode.insertBefore(js, fjs);
                                }(document, 'script', 'facebook-jssdk'));
                            </script>
                        </div>
                    </div>
                </div>
                <div class='product-page col-md-9'>
                    <div class="single-product">
                        <!--<form method="post" id="ProductDetailsForm" action="/???" crossorigin="anonymous">-->
                        <form method="post" id="ProductDetailsForm" action="#"
                              crossorigin="anonymous">
                            <div class="product">
                                <div class='page_title'>
                                    <h1>
                                        @Model.TenSanPham
                                    </h1>
                                </div>
                                <div style='margin-bottom: 25px;'>
                                    <div class="col-sm-8 pd_img_wrap noleftpadding">
                                        <!-- Product Single - Gallery
                                        ============================================= -->
                                        <div class="product-image product-main-image">
                                            <div class="slider-wrap">

                                                <div class='pd_slide_thumb slick_thumb col-sm-2 noleftpadding hidden-xs'>
                                                    <div class="">
                                                        <div class="img">

                                                            <img src="@Model.HinhMinhHoa" />
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="pd_slide col-sm-10 nopadding">
                                                    <div class="">
                                                        <div class="img">
                                                            <img class=""
